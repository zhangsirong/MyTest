<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhang="http://schemas.android.com/apk/res/com.zhang.mobliesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <com.zhang.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        zhang:desc_off="设置自动更新已经关闭"
        zhang:desc_on="设置自动更新已经开启"
        zhang:title="设置自动更新" >
    </com.zhang.mobilesafe.ui.SettingItemView>

    <com.zhang.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_show_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        zhang:desc_off="号码归属地显示已经关闭"
        zhang:desc_on="号码归属地显示已经开启"
        zhang:title="号码归属地显示" >
    </com.zhang.mobilesafe.ui.SettingItemView>

    <com.zhang.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.zhang.mobilesafe.ui.SettingClickView>

    <com.zhang.mobilesafe.ui.SettingItemView
        android:id="@+id/siv_callsms_safe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        zhang:desc_off="黑名单拦截已经关闭"
        zhang:desc_on="黑名单拦截已经开启"
        zhang:title="黑名单拦截设置" >
    </com.zhang.mobilesafe.ui.SettingItemView>

</LinearLayout>